<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:padding="24dp">

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Connecting..."
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <!-- Phone Number -->
    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="+1234567890"
        android:textColor="#cccccc"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Call Controls Container -->
    <LinearLayout
        android:id="@+id/callControlsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal">

        <!-- Mute Button -->
        <ImageButton
            android:id="@+id/muteButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:background="@drawable/call_button_background"
            android:contentDescription="Mute"
            android:padding="16dp"
            android:src="@drawable/ic_mic_off"
            android:tint="#ffffff" />

        <!-- Speaker Button -->
        <ImageButton
            android:id="@+id/speakerButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:background="@drawable/call_button_background"
            android:contentDescription="Speaker"
            android:padding="16dp"
            android:src="@drawable/ic_volume_up"
            android:tint="#ffffff" />

    </LinearLayout>

    <!-- End Call Button -->
    <ImageButton
        android:id="@+id/endCallButton"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@id/callControlsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/end_call_button_background"
        android:contentDescription="End Call"
        android:padding="20dp"
        android:src="@drawable/ic_call_end"
        android:tint="#ffffff" />

</RelativeLayout>
